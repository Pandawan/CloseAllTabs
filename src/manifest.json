{
    "name": "Close All Tabs",
    "version": "1.0.0",
    "description": "Quickly close all tabs on chrome",
    "author": "Pandawan",
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": [
            "index.js",
            "background/background.js"
        ],
        "persistent": false
    },
    "commands": {
        "closeOnLeft": {
            "suggested_key": {
                "default": "Alt+Shift+Left"
            },
            "description": "Close all tabs on the left"
        },
        "closeOnRight": {
            "suggested_key": {
                "default": "Alt+Shift+Right"
            },
            "description": "Close all tabs on the right"
        },
        "closeAllTabs": {
            "suggested_key": {
                "default": "Alt+Shift+W"
            },
            "description": "Close all tabs in the current window"
        }
    },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/close_all_tabs_icon@16.png",
            "32": "icons/close_all_tabs_icon@32.png",
            "48": "icons/close_all_tabs_icon@48.png",
            "128": "icons/close_all_tabs_icon@128.png"
        }
    },
    "icons": {
        "16": "icons/close_all_tabs_icon@16.png",
        "32": "icons/close_all_tabs_icon@32.png",
        "48": "icons/close_all_tabs_icon@48.png",
        "128": "icons/close_all_tabs_icon@128.png"
    },
    "manifest_version": 2
}